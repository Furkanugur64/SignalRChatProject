
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignalR Chat Uygulaması</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        li {
            margin-top: 15px;
            margin-left: 10px;
            font-size: 15px;
        }

    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h3 class="text-center mb-4">SignalR Chat Uygulaması</h3>
            </div>
        </div>
        <div class="row p-1">
            <div class="col-2">Kullanıcı Adı:</div>
            <div class="col-5">
                <input type="text" id="userInput" class="form-control" />
            </div>           
        </div>
        <div class="row p-1">
            <div class="col-2">Mesajınız:</div>
            <div class="col-5">
                <input type="text" class="form-control" id="messageInput" />
            </div>
        </div>
        
        <div class="row p-1">
            <div class="col-2"></div>
            <div class="col-3">
                <input type="button" id="sendButton" value="Mesaj Gönder" class="btn btn-primary" />
            </div>
        </div>
        <div class="row p-1">
            <div class="col-12">
                <hr />
            </div>
        </div>
        <div class="row p-1">
            <div class="col-12">
                <ul id="messagesList" class="list-group"></ul>
            </div>
        </div>
    </div>
    
    <!-- Bootstrap 5 and SignalR JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>
</body>
</html>
